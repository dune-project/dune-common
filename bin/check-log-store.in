#!/bin/sh

set -e

# DB format
#
# <tag> <revision> <host> <mode> <module> <path> <errors> <warnings> <log>

# parameter:
# $(LOG_FILE) $(LOG_DIR) "build" "$$target" "$$path"

host="@hostid@"
tag="@tag@"
revision="@revision@"

logfile="$1"
logdir="$2"
mode="$3"
module="$4"
path="$5"
errors="$6"
warnings="$7"

test -d $logdir || mkdir $logdir

storelog=`tempfile -d $logdir`

trap "rm -f $storelog" EXIT

if true; then
	echo "TAG: $tag"
	echo "REVISION: $revision"
	echo "HOST: $host"
	echo "MODE: $mode"
	echo "MODULE: $module"
	echo "PATH: $path"
	if test "x$errors" != x; then
		echo "ERRORS: $errors"
	fi
	if test "x$warnings" != x; then
		echo "WARNINGS: $warnings"
	fi
	echo "LOG:"
	cat $logfile
fi > $storelog

trap - EXIT

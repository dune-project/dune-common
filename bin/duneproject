#!/usr/bin/env bash

function error() {
  echo "The duneproject script requires cookiecutter!"
  echo "Cookiecutter is a Python module that can be installed"
  echo "using your favorite method, e.g. with"
  echo "python -m pip install cookiecutter"
}

# Checking that Cookiecutter is installed
echo "Detecting cookiecutter..."
python -m cookiecutter --version
test $? -eq 0 || error

# Run Cookiecutter
python -m cookiecutter https://gitlab.dune-project.org/dominic/dune-cookiecutter
